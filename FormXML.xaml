<Window x:Class="CSVXML_TemplateEditor.FormXML"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSVXML_TemplateEditor"
        mc:Ignorable="d"
        Title="XML" Height="450" Width="800" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"></ColumnDefinition>
            <ColumnDefinition Width="90"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="XMLTable" Grid.Row="0" Grid.ColumnSpan="4" AutoGenerateColumns="True" Background="Snow"></DataGrid>

        <Border Grid.Row="1" Grid.ColumnSpan="4" Background="Snow"></Border>
        
        <Border x:Name="LoadFileButton" Grid.Row="1" Grid.Column="0" Height="30" Background="#FF0F111A" CornerRadius="6" Margin="5" Cursor="Hand" MouseEnter="LoadFileMouseEnter" MouseLeave="LoadFileMouseLeave" MouseDown="LoadFileMouseDown">
            <TextBlock Text="Load" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="17" FontWeight="Bold" IsEnabled="False"></TextBlock>
        </Border>
        <Border x:Name="SaveFileButton" Grid.Row="1" Grid.Column="1" Height="30" Background="#FF0F111A" CornerRadius="6" Margin="5" Cursor="Hand" MouseEnter="SaveFileMouseEnter" MouseLeave="SaveFileMouseLeave" MouseDown="SaveFileMouseDown">
            <TextBlock Text="Save" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="17" FontWeight="Bold" IsEnabled="False"></TextBlock>
        </Border>
        <Border x:Name="SaveAsFileButton" Grid.Row="1" Grid.Column="2" Height="30" Background="#FF0F111A" CornerRadius="6" Margin="5" Cursor="Hand" MouseEnter="SaveAsFileMouseEnter" MouseLeave="SaveAsFileMouseLeave" MouseDown="SaveAsFileMouseDown">
            <TextBlock x:Name="SaveAs" Text="Save as" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="17" FontWeight="Bold" IsEnabled="False"></TextBlock>
        </Border>
    </Grid>
</Window>
